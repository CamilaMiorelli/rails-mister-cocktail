<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.fondationlouisvuitton.fr/content/flvinternet/fr/expositions/exposition/la-collection-courtauldlepartidelimpressionnisme/_jcr_content/image.flvcrop.2048.5000.jpeg);">
  <div class="container">
    <h1>The Bar</h1>
    <p>Store your drinks recipes all in one place!</p>
    <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-light" %>
  </div>
</div>



<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key if cocktail.photo.attached? %>)">
      <h1><%= link_to "#{cocktail.name}", "/cocktails/#{cocktail.id}" %></h1>
    </div>
  <% end %>
</div>


